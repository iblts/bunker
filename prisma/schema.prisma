generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model Player {
  id         Int     @id @default(autoincrement())
  name       String?
  sex        String?
  age        String?
  height     String?
  profession String?
  health     String?
  hobby      String?
  phobia     String?
  character  String?
  inventory  String?
  extra      String?
  card1      String?
  card2      String?
  opened     String?
}

model Data {
  id      Int     @id @default(autoincrement())
  place   String?
  size    String?
  time    String?
  food    String?
  rooms   String?
  problem String?
  extra   String?
}

model Round {
  id                 Int     @id @default(autoincrement())
  isStarted          Boolean @default(false)
  mustOpen           Int     @default(3)
  players            String?
  activePlayer       Int?
  activePlayerOpened Int
}
